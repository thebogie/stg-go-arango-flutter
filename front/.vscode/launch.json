
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter Web",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["--web-port", "8080"],
      "cwd": "${workspaceFolder}",
      "webDaemonLogFile": "${workspaceFolder}/web.log",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "package:": "${workspaceFolder}/.dart_tool/package_config.json"
      },
      "env": {
        "FLUTTER_WEB_DEBUGGER": "true"
      },
      "debugSdkLibraries": true
    }
  ]
}